{
  "include": [
    "${configDir}/**/*",
    "${configDir}/**/.*",
    "${configDir}/**/.*/**/*",
    "${configDir}/**/.*/**/.*",
  ],
  "exclude": [
    "${configDir}/**/node_modules/**",
  ],
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "allowJs": true,
    "noEmit": true,
  }
}
